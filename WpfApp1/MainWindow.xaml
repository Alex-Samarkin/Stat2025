<ribbon:RibbonWindow x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:ribbon="clr-namespace:System.Windows.Controls.Ribbon;assembly=System.Windows.Controls.Ribbon"
        mc:Ignorable="d"
        Title="MainWindow" Height="240" Width="1200" 
                     WindowStartupLocation="Manual"
                     
        >
    <Grid>
        <ribbon:Ribbon x:Name="MainRibbon" IsDropDownOpen="False" Title="Статистика" >

            <ribbon:RibbonTab Header="Данные">
                <ribbon:RibbonGroup Header="Работа с данными">
                    <ribbon:RibbonButton Label="Button1" Click="RibbonButton_Click" />
                    <ribbon:RibbonButton Label="Button2" Background="#FFBFF7AF" Click="RibbonButton_Click_1"  />
                </ribbon:RibbonGroup>
            </ribbon:RibbonTab>
        </ribbon:Ribbon>
    </Grid>
</ribbon:RibbonWindow>
